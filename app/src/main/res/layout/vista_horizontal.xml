<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/magnitud_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="60sp"
            tools:text="5.0" />

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="58dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:scrollbarSize="18sp"
            android:src="@drawable/ic_flecha_derecha" />

        <TextView
            android:id="@+id/pacle_text"
            android:layout_width="562dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="1dp"
            android:layout_toStartOf="@+id/arrow_img"
            android:layout_toEndOf="@+id/magnitud_txt"
            android:fontFamily="sans-serif-medium"
            android:text="Carchi - Tulcan"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/latitude_text"
            android:layout_width="570dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pacle_text"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="67dp"
            android:layout_toStartOf="@+id/arrow_img"
            android:layout_toEndOf="@+id/magnitud_txt"
            android:fontFamily="sans-serif-medium"
            android:text="Latitud"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/longitude_text"
            android:layout_width="535dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/latitude_text"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="71dp"
            android:layout_toStartOf="@+id/arrow_img"
            android:layout_toEndOf="@+id/magnitud_txt"
            android:fontFamily="sans-serif-medium"
            android:text="Longitud"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
</layout>